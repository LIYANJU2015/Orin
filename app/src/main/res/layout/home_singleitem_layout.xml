<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_single_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:paddingRight="16dp">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/genres_home_item_iv"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="right|center"
                android:src="@drawable/genres_home_item_bg" />

            <ImageView
                android:id="@+id/item_album_iv22"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/default_album_art" />
        </FrameLayout>

        <TextView
            android:id="@+id/single_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:fontFamily="sans-serif"
            android:maxWidth="160dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_back_right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDividerBlack" />
</LinearLayout>